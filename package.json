    "@nestjs/cli": "^6.6.0",
    "@nestjs/testing": "^6.0.0",
    "@types/express": "^4.16.0",
    "@types/graphql": "^14.2.3",
    "@types/jest": "^23.3.13",
    "@types/node": "^10.12.18",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.4",
    "@types/supertest": "^2.0.7",
    "concurrently": "^4.1.0",
    "css-loader": "^3.0.0",
    "jest": "^24.8.0",
    "mini-css-extract-plugin": "^0.8.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "supertest": "^3.4.1",
    "ts-jest": "24.0.2",
    "ts-loader": "^6.0.4",
    "ts-node": "8.1.0",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.16.0",
    "typed-css-modules": "^0.6.0",
    "typescript": "3.4.3",
    "wait-on": "^3.2.0",
    "webpack": "^4.35.3",
    "webpack-cli": "^3.3.6",
    "webpack-shell-plugin": "^0.5.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
